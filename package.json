{
  "name": "@repo/root",
  "version": "0.1.0",
  "type": "module",
  "packageManager": "pnpm@9.15.0",
  "private": true,
  "scripts": {
    "clear": "shx rm -rf dist",
    "test": "pnpm run -r --parallel test",
    "prebuild": "pnpm run clear",
    "build": "pnpm run -r --filter=!@repo/playground build",
    "lint:ts": "tsc --project tsconfig.json",
    "lint:ecma": "eslint --fix",
    "lint": "run-p lint:*",
    "dev": "pnpm --filter @repo/playground run dev",
    "core:release": "pnpm --filter @tapsioss/client-socket-manager run build",
    "core:build": "pnpm --filter @tapsioss/client-socket-manager run build",
    "react:release": "pnpm --filter @tapsioss/react-client-socket-manager run build",
    "react:build": "pnpm --filter @tapsioss/react-client-socket-manager run build"
  },
  "devDependencies": {
    "@eslint/js": "^9.19.0",
    "@jest/globals": "^29.7.0",
    "@lit/react": "^1.0.7",
    "@types/eslint__js": "^8.42.3",
    "@types/express": "^5.0.0",
    "@types/node": "^20.17.16",
    "@types/react": "^19.0.8",
    "eslint": "^9.19.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.7.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jest": "^28.11.0",
    "eslint-plugin-prettier": "^5.2.3",
    "eslint-plugin-react": "^7.37.4",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "express": "^4.21.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.4.2",
    "prettier-plugin-organize-imports": "^4.1.0",
    "shx": "^0.3.4",
    "socket.io": "^4.8.1",
    "socket.io-client": "^4.8.1",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.22.0"
  }
}
